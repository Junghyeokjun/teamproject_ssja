<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="teamproject.ssja.mapper.BoardMapper">
<!-- 	<select id="selectList" resultMap="BoardDtoMap">
    	<![CDATA[
        	SELECT * FROM board ORDER BY b_no desc
        ]]>
	</select> -->
	<select id="read" resultMap="BoardDtoMap">
    	<![CDATA[
        	select * from board where b_no=#{bno}
        ]]>
	</select>
	<insert id="insertBoard" parameterType="BoardDto">
	    <![CDATA[
        	INSERT INTO board (B_NO, M_NO, B_C_NO, B_WRITER, B_TITLE, B_CONTENT, B_DATE, B_LIKE, B_HIT, B_EVAL, PRO_NO)
        	VALUES (B_SEQ.NEXTVAL, #{mno}, #{bcno}, #{bwriter}, #{btitle}, #{bcontent}, sysdate, #{blike}, #{bhit}, #{beval}, #{prono})
        ]]>
	</insert>
	<update id="updateBoard" parameterType="BoardDto">
		<![CDATA[
        	update board set b_title=#{btitle}, b_content=#{bcontent} where b_no=#{bno}
        ]]>
	</update>

	<delete id="deleteBoard" parameterType="BoardDto">
		 <![CDATA[
        	delete from board where b_no = #{bno}
        ]]>
	</delete>

	<!-- 게시글 조회수 -->
	<update id="updateHit" parameterType="long">
		<![CDATA[
        	update board set b_hit=b_hit+1 where b_no=#{bno}
        ]]>
	</update>

	<!-- 게시글 좋아요 관련 + -->
	<update id="updateBLikeUp" parameterType="long">
		<![CDATA[
        	update board set b_like=b_like+1 where b_no=#{bno}
        ]]>
	</update>
	
	<!-- 게시글 좋아요 관련 - -->
	<update id="updateBLikeDown" parameterType="long">
		<![CDATA[
        	update board set b_like=b_like-1 where b_no=#{bno}
        ]]>
	</update>

	<!-- 댓글 입력. 최신 댓글은 언제나 게시글 바로 아래에 위치한다. -->
	<insert id="insertReply" parameterType="ReplysDto">
	    <![CDATA[
        	insert into replys (r_no, b_no, m_no, r_writer, r_content, r_date, r_like, r_group, r_step, r_indent) 
			values (r_seq.nextval, #{bno} , #{mno} , #{rwriter}, #{rcontent}, sysdate, #{rlike}, #{rgroup}, #{rstep}+1 , #{rindent}+1 )
        ]]>
	</insert>
	
	<!-- 기존에 작성되어 있는 댓글들의 bstep을 수정하는 작업 -->
	<update id="updateShape" parameterType="ReplysDto">
		<![CDATA[
        	update replys set r_step = r_step + 1 where r_group = #{r_group} and r_step > #{r_step}
        ]]>
	</update>

	<!-- 해당 게시글의 댓글들을 조회하기 -->
	<select id="selectReplys" resultMap="ReplysDtoMap">
		<![CDATA[
        	SELECT * FROM replys where b_no = #{bno} ORDER BY r_no desc, r_step asc
        ]]>
	</select>
	
	<update id="updateReply" parameterType="ReplysDto">
		<![CDATA[
        	update replys set r_title = #{rtitle}, r_content = #{rcontent} where r_no = #{rno}
        ]]>
	</update>
	
	<delete id="deleteReply" parameterType="ReplysDto">
		 <![CDATA[
        	delete from replys where r_no = #{rno}
        ]]>
	</delete>
	
	<!-- 댓글 좋아요 관련 + -->
	<update id="updateRLikeUp" parameterType="long">
		<![CDATA[
        	update replys set r_like=r_like+1 where r_no=#{rno}
        ]]>
	</update>
	
	<!-- 댓글 좋아요 관련 - -->
	<update id="updateRLikeDown" parameterType="long">
		<![CDATA[
        	update replys set r_like=r_like-1 where r_no=#{rno}
        ]]>
	</update>
		
	<select id="selectReplyLikes" parameterType="long" resultType="long">
    	<![CDATA[
        	select * from replys where r_no=#{rno}
        ]]>
	</select>

	<!-- 게시글 페이징 -->
	<select id="selectListWithPaging" resultMap="BoardDtoMap">
    	<![CDATA[
        	select * from 
        	(
			    select
			        rownum rnum , A.*
			    from 
			    (select
			     * 
		    	 from board order by b_no desc) A 
		    	where rownum <= #{pageNum} * #{amount} 
		    )
			where rnum > (#{pageNum}-1) * #{amount}
        ]]>
	</select>

	<!-- 게시글 총 개수  -->
	<select id="selectTotalCount" resultType="long">
    	<![CDATA[
        	SELECT count(*) FROM board
        ]]>
	</select>

	<!-- 해당 게시글의 좋아요 개수  -->
	<select id="selectBoardLikes" parameterType="long" resultType="long">
    	<![CDATA[
        	SELECT b_like FROM board where b_no = #{bno}
        ]]>
	</select>


	<resultMap type="teamproject.ssja.dto.BoardDto" id="BoardDtoMap">
		<id property="bno" column="b_no"/>
		<result property="mno" column="m_no"/>
		<result property="bcno" column="b_c_no"/>
		<result property="bwriter" column="b_writer"/>
		<result property="btitle" column="b_title"/>
		<result property="bcontent" column="b_content"/>
		<result property="bdate" column="b_date"/>
		<result property="blike" column="b_like"/>
		<result property="bhit" column="b_hit"/>
		<result property="beval" column="b_eval"/>
		<result property="prono" column="pro_no"/>
	</resultMap>
	
	<resultMap type="teamproject.ssja.dto.ReplysDto" id="ReplysDtoMap">
		<id property="rno" column="R_NO"/>
		<result property="bno" column="B_NO"/>
		<result property="mno" column="M_NO"/>
		<result property="rwriter" column="R_WRITER"/>
		<result property="rcontent" column="R_CONTENT"/>
		<result property="rdate" column="R_DATE"/>
		<result property="rlike" column="R_LIKE"/>
		<result property="rgroup" column="R_GROUP"/>
		<result property="rstep" column="R_STEP"/>
		<result property="rindent" column="R_INDENT"/>
	</resultMap>
</mapper>